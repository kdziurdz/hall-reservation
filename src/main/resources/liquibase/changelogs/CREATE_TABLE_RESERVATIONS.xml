<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="18" author="Konrad">
        <createTable tableName="RESERVATIONS">
            <column name="ID" type="int" autoIncrement="true" incrementBy="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="LESSON_NUMBER" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="HALL_ID" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <!--<changeSet author="Konrad" id="11">-->
        <!--<addUniqueConstraint columnNames="NAME" constraintName="HALL_NAME_UK" tableName="HALLS"/>-->
    <!--</changeSet>-->

    <changeSet id="19" author="Konrad">
        <addForeignKeyConstraint baseColumnNames="USER_ID"
                                 baseTableName="RESERVATIONS"
                                 constraintName="FK_RESERVATION_USER"
                                 referencedColumnNames="ID"
                                 referencedTableName="USERS"/>
    </changeSet>

    <changeSet id="20" author="Konrad">
        <addForeignKeyConstraint baseColumnNames="HALL_ID"
                                 baseTableName="RESERVATIONS"
                                 constraintName="FK_RESERVATION_HALL"
                                 referencedColumnNames="ID"
                                 referencedTableName="HALLS"/>
    </changeSet>

</databaseChangeLog>